cc_defaults {
    name: "dwarves_defaults",
    cflags: [
        "-DDWARVES_MAJOR_VERSION=1",
        "-DDWARVES_MINOR_VERSION=19",
        "-D_GNU_SOURCE",
        "-Wno-constant-conversion",
        "-Wno-deprecated-declarations",
        "-Wno-missing-field-initializers",
        "-Wno-pointer-arith",
        "-Wno-unused-parameter",
        "-Wno-unused-variable",
    ],
    compile_multilib: "64",
}


cc_library_host_static {
    name: "libdwarves",
    defaults: ["dwarves_defaults"],
    srcs: [
        "btf_encoder.c",
        "btf_loader.c",
        "ctf_loader.c",
        "dutil.c",
        "dwarf_loader.c",
        "dwarves.c",
        "dwarves_fprintf.c",
        "dwarves_reorganize.c",
        "elf_symtab.c",
        "gobuffer.c",
        "libctf.c",
        "rbtree.c",
    ],
    whole_static_libs: [
        "libbpf",
        // "libdw",
        "dwarves_libdw",
        "dwarves_libelf",
        "libz",
    ],
}

cc_binary_host {
    name: "pahole",
    defaults: ["dwarves_defaults"],
    srcs: [
        "pahole.c",
    ],
    static_libs: [
        "libdwarves",
    ],
}
